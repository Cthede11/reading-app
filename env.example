# Copy this file to .env and configure as needed
PORT=5000
NODE_ENV=development
ENABLE_NOVELBIN=false
# Override LightNovelPub base if needed (defaults to https://www.lightnovelpub.com)
# LIGHTNOVELPUB_BASE_URL=https://www.lightnovelpub.com
ENABLE_JINA_PROXY=true
ENABLE_NOVELFULL=true
ENABLE_READNOVELFULL=true

# Optional cookies (sometimes needed for Cloudflare or authenticated views)
# Copy cookie string from your browser DevTools if required
# NOVELBIN_COOKIE=cf_chl_2=...; cf_clearance=...; other=...
# LIGHTNOVELPUB_COOKIE=cf_clearance=...; other=...

# Retry and pacing settings
# MAX_RETRIES=2
# REQUEST_DELAY_MS_MIN=50
# REQUEST_DELAY_MS_MAX=200

# Cache TTLs (in ms)
# SEARCH_TTL_MS=600000
# DETAILS_TTL_MS=1800000
# CHAPTER_TTL_MS=7200000
